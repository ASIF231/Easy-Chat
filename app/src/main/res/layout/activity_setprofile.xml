<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".setprofile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Save You Profile"
        android:layout_above="@+id/guestimg"
        android:layout_marginBottom="30dp"
        android:textColor="#35d366"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/guestimg"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_above="@+id/username"
        app:cardCornerRadius="130dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userimg"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textCapWords"
        android:hint="Enter Your Name"
        android:layout_centerVertical="true"
        android:id="@+id/username"
        />
    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/username"
        android:id="@+id/btnsaveprof"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:text="SAVE PROFILE"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="50dp"
        android:background="#25d366"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsaveprof"
        android:layout_centerHorizontal="true"
        android:id="@+id/progsetprof"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>